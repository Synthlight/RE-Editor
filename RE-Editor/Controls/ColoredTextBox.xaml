<Grid x:Class="RE_Editor.Controls.ColoredTextBox"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      Name="this"
      MinWidth="100"
      d:DesignHeight="20"
      d:DesignWidth="100"
      mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0"
                 d:Text="#FFFFFFFF"
                 DataContext="{x:Reference this}"
                 FontFamily="Consolas"
                 Text="{Binding Color.RGBA, UpdateSourceTrigger=PropertyChanged}"/>
        <xctk:ColorPicker Grid.Column="1"
                          MinWidth="20"
                          Background="{Binding Color.AsBrush, Mode=OneWay}"
                          ColorMode="ColorCanvas"
                          DataContext="{x:Reference this}"
                          SelectedColor="{Binding Color.AsColor, Mode=TwoWay}"/>
    </Grid>
</Grid>