<Window x:Class="RE_Editor.Windows.RunCodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
        xmlns:controls="clr-namespace:RE_Editor.Common.Controls;assembly=Common"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:RE_Editor.Windows"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Name="this"
        Title="Run Code"
        Width="1300"
        Height="850"
        Style="{DynamicResource CustomWindowStyle}"
        WindowStartupLocation="CenterOwner"
        mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0"
                   Grid.Column="0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Stretch">
            <StackPanel HorizontalAlignment="Center"
                        Orientation="Horizontal">
                <Button Margin="0,0,0,0"
                        HorizontalAlignment="Left"
                        Click="Btn_open_Click"
                        Content="Open"/>
                <xctk:SplitButton Margin="8,0,0,0"
                                  HorizontalAlignment="Left"
                                  Click="Btn_save_Click"
                                  Content="Save (Ctrl+S)">
                    <xctk:SplitButton.DropDownContent>
                        <StackPanel Orientation="Vertical">
                            <Button Margin="0,0,0,0"
                                    HorizontalAlignment="Left"
                                    Click="Btn_save_as_Click"
                                    Content="Save As (Ctrl+Shift+S)"/>
                        </StackPanel>
                    </xctk:SplitButton.DropDownContent>
                </xctk:SplitButton>
                <TextBlock Name="lbl_saved"
                           Margin="8,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Text="—Saved"
                           Visibility="Collapsed"/>
                <TextBlock Name="lbl_no_changes"
                           Margin="8,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Text="—No Changes to Save"
                           Visibility="Collapsed"/>
            </StackPanel>
        </DockPanel>
        <DockPanel Grid.Row="0"
                   Grid.Column="2"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Stretch">
            <StackPanel HorizontalAlignment="Center"
                        Orientation="Horizontal">
                <Button Margin="8,0,0,0"
                        HorizontalAlignment="Right"
                        Click="Btn_open_examples_OnClick"
                        Content="Open Examples"/>
                <Button Margin="8,0,0,0"
                        HorizontalAlignment="Right"
                        Click="Btn_open_api_OnClick"
                        Content="Open API"/>
            </StackPanel>
        </DockPanel>
        <Label Grid.Row="1"
               Grid.Column="1">
            <TextBlock Name="main_text"
                       d:Text="How this works."
                       TextWrapping="Wrap"/>
        </Label>
        <avalonedit:TextEditor Name="code_box"
                               Grid.Row="2"
                               Grid.Column="0"
                               Grid.ColumnSpan="3"
                               Margin="8"
                               d:Text="Sample code."
                               BorderBrush="Black"
                               BorderThickness="1"
                               ShowLineNumbers="True"
                               SyntaxHighlighting="C#"/>
        <DockPanel Grid.Row="3"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch">
            <Grid HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0"
                       Margin="0,8,0,8"
                       Content="Code Completion Target Type:"/>
                <controls:AutoFilteredComboBox Grid.Column="1"
                                               Margin="0,8,0,8"
                                               DataContext="{x:Reference this}"
                                               DisplayMemberPath="Key"
                                               IsDropDownOpen="False"
                                               IsEditable="True"
                                               IsTextSearchEnabled="False"
                                               ItemsSource="{Binding GeneratedTypes}"
                                               MinCountForFilter="5"
                                               SelectedValue="{Binding TargetCompletionEntries}"
                                               SelectedValuePath="Value"
                                               StaysOpenOnEdit="True">
                    <controls:AutoFilteredComboBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel/>
                        </ItemsPanelTemplate>
                    </controls:AutoFilteredComboBox.ItemsPanel>
                </controls:AutoFilteredComboBox>
            </Grid>
        </DockPanel>
        <DockPanel Grid.Row="3"
                   Grid.Column="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Stretch">
            <StackPanel HorizontalAlignment="Center"
                        Orientation="Horizontal">
                <Button Margin="0,8,0,8"
                        HorizontalAlignment="Left"
                        Click="Btn_run_code_Click"
                        Content="Run Code"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>